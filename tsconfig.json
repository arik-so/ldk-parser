{
	"compilerOptions": {
		"module": "ES2020",
		"moduleResolution": "Node",
		"target": "es2021",
		"sourceMap": true,
		"esModuleInterop": false,
		"allowSyntheticDefaultImports": true,

		"strictNullChecks": true,
		"strictFunctionTypes": true,
		"noImplicitAny": true,
		// "rootDir": "src",
		// "resolveJsonModule": true
	},
	"compileOnSave": true,
	"include": [
		"src",
		"test"
	],
	"exclude": [
		"node_modules",
	]
}
